pipeline {
     agent {
     label 'authenticationNode'
     }
     environment {
        dockerImage = ''
        registry = 'sumithpe/poc6auth'
        DOCKERHUB_CREDENTIALS = credentials('dockerhub_id')
        PATH = "$PATH:/root/.dotnet/tools"
    }
    stages {
    stage('Build'){
            steps{
                sh 'export PATH="$PATH:/root/.dotnet/tools"'
                sh 'printenv'
                sh 'whoami'
                sh 'cd /var/lib/jenkins/workspace/trial/'
                sh 'sudo dotnet sonarscanner begin /k:"poc6-auth" /d:sonar.host.url="http://35.225.86.148:9000"  /d:sonar.login="sqp_87bc636c842a09d39b0aedd4e9f061d34b3dc10f"'
                sh 'sudo dotnet build'
            }
         }
        stage('SonarQube analysis') {
//    def scannerHome = tool 'SonarScanner 4.0';
        steps{
         
        // If you have configured more than one global server connection, you can specify its name
//      sh "${scannerHome}/bin/sonar-scanner"
        sh 'sudo dotnet sonarscanner end /d:sonar.login="sqp_87bc636c842a09d39b0aedd4e9f061d34b3dc10f"'
    
        }
        }
        
        
stage('Build Docker Images') {
            steps {
                script {
                    echo registry
                    sh 'docker image build -t sumithpe/poc6auth ./JWTAuth_Validation/'
                }
            }
        }
stage('Upload to DockerHub'){
            steps {
                script {
                       sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                        sh 'docker image push sumithpe/poc6auth:latest'
                        }
                }
            }




        stage('docker stop container') {
         steps {
            sh 'docker ps -f name=poc6authcon  -q | xargs --no-run-if-empty docker container stop'
            sh 'docker container ls -a -fname=poc6authcon -q | xargs -r docker container rm'
         }
       }
       stage('Docker Run') {
        steps {
            script {
                sh 'docker container run -d -p 49356:80 --rm --name poc6authcon sumithpe/poc6auth'
                }
            }
        }
    }
}
